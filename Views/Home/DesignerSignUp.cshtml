@{
    ViewBag.Title = "Designer SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login</title>
</head>


<body>

    <div class="container"><br /><br /><br /><br /><br /><br /></div>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="container col-md-4 center">

            <form class="form-signin" action="AddDesigner" method="post" enctype="multipart/form-data">
                <h2 class="form-signin-heading">Welcome! Sign Up</h2>
                <label for="inputName" class="sr-only">Name</label>
                <input type="text" id="name" name="name" class="form-control" style="width:90%" placeholder="Enter Name" ><br />
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="email" name="email" class="form-control" style="width:90%" placeholder="Enter Email address"  autofocus=""><br />
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="pass" name="password" class="form-control" style="width:90%" placeholder="Enter Password"><br />
                <label for="inputPhone" class="sr-only">Phone Number</label>
                <input type="tel" id="number" class="form-control" name="number" style="width:90%" placeholder="Enter Phone Number" ><br />
                <label for="inputName" class="sr-only">Address</label>
                <input type="text" id="inputName" class="form-control" name="address" style="width:90%" placeholder="Enter Address" required=""><br />
                <div class="radio" id="gender">
                    <label>
                        <input type="radio" name="gender" value="male"><font size="3">Male</font>
                    </label>
                    <label>
                        <input type="radio" name="gender" value="female"><font size="3">Female</font>
                    </label>
                </div>
                <div class="radio" id="type">
                    <label>
                        <input type="radio" name="type" value="designer"><font size="3">Designer</font>
                    </label>
                    <label>
                        <input type="radio" name="type" value="photographer"><font size="3">Photographer</font>
                    </label>
                </div>
                <br />
                <div class="form-group">
                    <font size="3">
                        Upload Profile Picture:<br /> <input type="file" name="image" id="image" required="">
                    </font>
                </div><br />
                <button class="btn btn-lg btn-success" onclick="return validateForm()" type="submit">Sign Up</button>
                <br /><font size="3">Already have an Account? <a href="/Home/DesignerLogin">Sign In</a></font><br /><br />
            </form>
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
</body>

</html>
<script>
    function validateForm() {
        var name = document.getElementById('name');
        var email = document.getElementById('email');
        var pass = document.getElementById('pass');
        var num = document.getElementById('number');
        if (name.value == "" || name.value == null || email.value == "" || email.value == null || pass.value == "" || pass.value == null) {
            alert("Plz Fill All Fields");
            return false;
        }

        if (email.value.indexOf("@@") < 0 || email.value.indexOf(".com") < 0) {
            alert("invalid Email-Id");
            return false;
        }

        if (pass.value.length < 5) {
            alert("Password Length should be greater than 5");
            return false;
        }

        if (isNaN(num.value)) {
            alert("Invalid Phone-Number");
            return false;
        }
    }
</script>

